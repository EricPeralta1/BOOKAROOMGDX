<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
  <uses-feature android:glEsVersion="0x00020000" android:required="true"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
      android:allowBackup="true"
      android:fullBackupContent="true"
      android:icon="@mipmap/ic_launcher"
      android:isGame="true"
      android:appCategory="game"
      android:label="@string/app_name"
      tools:ignore="UnusedAttribute"
      android:theme="@style/Theme.Bookaroom"
      android:usesCleartextTraffic="true">
     <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
      </provider>
      <activity
          android:name="com.example.bookaroom.android.Activities.LoginActivity"
          android:exported="true"
          >
          <intent-filter>
              <action android:name="android.intent.action.MAIN" />

              <category android:name="android.intent.category.LAUNCHER" />
          </intent-filter>
      </activity>
      <activity
          android:name="com.example.bookaroom.android.Activities.SearchEventActivity"
          android:exported="true">
      </activity>
      <activity
          android:name="com.example.bookaroom.android.Activities.SeatSelectionActivity"
          android:exported="true">
      </activity>
      <activity
          android:name="com.example.bookaroom.android.Activities.ManualSearchActivity"
          android:exported="true">
      </activity>
      <activity
          android:name="com.example.bookaroom.android.Activities.ChatActivity"
          android:exported="true">
      </activity>
      <activity
          android:name="com.example.bookaroom.android.Activities.InventoryActivity"
          android:exported="true">
      </activity>
      <activity
          android:name="com.example.bookaroom.android.Activities.SettingsActivity"
          android:exported="true">
      </activity>
      <activity
          android:name="com.example.bookaroom.android.Activities.ChangeLanguageActivity"
          android:exported="true">
      </activity>
      <activity
          android:name="com.example.bookaroom.android.Activities.EditUserActivity"
          android:exported="true">
      </activity>
      <activity
          android:name="com.example.bookaroom.android.Activities.CreateEventActivity"
          android:exported="true">
      </activity>
      <activity
          android:name="com.example.bookaroom.android.Activities.CreateAccountActivity"
          android:exported="true">
      </activity>
  </application>
</manifest>
