<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="251dp"
        android:layout_height="193dp"
        android:contentDescription="App Logo"
        android:src="@drawable/logo_ic"
        app:layout_constraintBottom_toTopOf="@+id/UsernameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/UsernameText"
        android:layout_width="@dimen/textboxloginwidth"
        android:layout_height="@dimen/textboxloginheigth"
        android:layout_marginBottom="20dp"
        android:background="@drawable/white_rectangle"
        android:hint="Username"
        android:inputType="text"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/SurnameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/SurnameText"
        android:layout_width="@dimen/textboxloginwidth"
        android:layout_height="@dimen/textboxloginheigth"
        android:layout_marginBottom="20dp"
        android:background="@drawable/white_rectangle"
        android:hint="Surname"
        android:inputType="text"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/emailText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/emailText"
        android:layout_width="@dimen/textboxloginwidth"
        android:layout_height="@dimen/textboxloginheigth"
        android:layout_marginBottom="16dp"
        android:background="@drawable/white_rectangle"
        android:hint="Email"
        android:inputType="text"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/PasswordTextRg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/PasswordTextRg"
        android:layout_width="@dimen/textboxloginwidth"
        android:layout_height="@dimen/textboxloginheigth"
        android:layout_marginBottom="20dp"
        android:background="@drawable/white_rectangle"
        android:hint="Password"
        android:inputType="text"
        android:singleLine="true"
        android:scrollHorizontally="true"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/passwordTextConfirmRg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/passwordTextConfirmRg"
        android:layout_width="@dimen/textboxloginwidth"
        android:layout_height="@dimen/textboxloginheigth"
        android:layout_marginBottom="20dp"
        android:background="@drawable/white_rectangle"
        android:hint="Confirm Password"
        android:padding="10dp"
        android:inputType="text"
        android:singleLine="true"
        android:scrollHorizontally="true"
        app:layout_constraintBottom_toTopOf="@+id/userTypeSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/userTypeSpinner"
        android:layout_width="@dimen/textboxloginwidth"
        android:layout_height="@dimen/textboxloginheigth"
        android:layout_marginBottom="20dp"
        android:background="@drawable/white_rectangle"
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="28dp"
        android:fontFamily="@font/outfit_medium"
        android:gravity="center"
        android:text="Welcome to the register screen. \n Open the fields to make a new account."
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/createAccountButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/createAccountButton"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/orange_rectangle"
        android:fontFamily="@font/outfit_medium"
        android:gravity="center"
        android:text="CREATE ACCOUNT"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/cancelCreation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cancelCreation"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="56dp"
        android:background="@drawable/orange_rectangle"
        android:fontFamily="@font/outfit_medium"
        android:gravity="center"
        android:text="RETURN"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
